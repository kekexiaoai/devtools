{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Wails Debug with delve",
      "type": "go",
      "request": "attach",
      "mode": "remote",
      "preLaunchTask": "dlv-server",
      "remotePath": "${workspaceFolder}",
      "port": 2345, // here goes the port you defined in the preLaunchTask 
      "host": "127.0.0.1"
    },
    {
      "type": "chrome",
      "request": "attach",
      "name": "Debug frontend(attach)",
      "url": "http://localhost:34115",
      "port": 9222,
      "webRoot": "${workspaceFolder}/frontend/src",
      "sourceMaps": true
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Debug frontend",
      "url": "http://localhost:34115",
      "webRoot": "${workspaceFolder}/frontend/src",
      "runtimeArgs": [
        "--remote-debugging-port=9222"
      ],
      "sourceMaps": true
    },
    {
      "name": "Wails: Production devtools",
      "type": "go",
      "request": "launch",
      "mode": "exec",
      "program": "${workspaceFolder}/build/bin/devtools",
      "preLaunchTask": "build",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Wails: Debug devtools",
      "type": "go",
      "request": "launch",
      "mode": "exec",
      "program": "${workspaceFolder}/build/bin/devtools",
      "preLaunchTask": "build debug",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Wails: Dev devtools",
      "type": "go",
      "request": "launch",
      "mode": "exec",
      "program": "${workspaceFolder}/build/bin/devtools",
      "preLaunchTask": "build dev",
      "cwd": "${workspaceFolder}"
    }
  ]
}