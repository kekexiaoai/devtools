{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "CGO_ENABLED": "1"
        }
      },
      "osx": {
        "options": {
          "env": {
            "CGO_CFLAGS": "-mmacosx-version-min=10.13",
            "CGO_LDFLAGS": "-framework UniformTypeIdentifiers -mmacosx-version-min=10.13"
          }
        }
      },
      "windows": {
        "options": {
          "env": {
            "CGO_ENABLED": "0"
          }
        }
      },
      "command": "go",
      "args": [
        "build",
        "-tags",
        "production,desktop",
        "-gcflags",
        "all=-N -l",
        "-o",
        "build/bin/devtools"
      ]
    },
    {
      "label": "build debug",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "CGO_ENABLED": "1"
        }
      },
      "osx": {
        "options": {
          "env": {
            "CGO_CFLAGS": "-mmacosx-version-min=10.13",
            "CGO_LDFLAGS": "-framework UniformTypeIdentifiers -mmacosx-version-min=10.13"
          }
        }
      },
      "windows": {
        "options": {
          "env": {
            "CGO_ENABLED": "0"
          }
        }
      },
      "command": "go",
      "args": [
        "build",
        "-tags",
        "production,desktop,debug",
        "-gcflags",
        "all=-N -l",
        "-o",
        "build/bin/devtools"
      ]
    },
    {
      "label": "build dev",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "CGO_ENABLED": "1"
        }
      },
      "osx": {
        "options": {
          "env": {
            "CGO_CFLAGS": "-mmacosx-version-min=10.13",
            "CGO_LDFLAGS": "-framework UniformTypeIdentifiers -mmacosx-version-min=10.13"
          }
        }
      },
      "windows": {
        "options": {
          "env": {
            "CGO_ENABLED": "0"
          }
        }
      },
      "command": "go",
      "args": [
        "build",
        "-tags",
        "dev",
        "-gcflags",
        "all=-N -l",
        "-o",
        "build/bin/devtools"
      ]
    },
    {
      "label": "wails-dev",
      "type": "shell",
      "command": "wails",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "isBackground": true,
      "args": [
        "dev",
        "-tags",
        "debug",
        "-loglevel",
        "Debug"
      ],
      "problemMatcher": {
        "owner": "custom",
        "pattern": {
          "regexp": "_______"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*",
          "endsPattern": "To develop in the browser and call your bound Go methods from Javascript, navigate to: .*"
        }
      }
    },
    {
      "label": "dlv-server",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "isBackground": true,
      "command": "bash", // Windows: "bash" (Git Bash/WSL) or "powershell"
      "args": [
        "debug.sh",
        "DevTools",
        "2345"
      ],
      // "command": "powershell",
      // "args": [
      //   "-File",
      //   "./debug.sh",
      //   "DevTools",
      //   "2345"
      // ],
      "dependsOn": [
        "wails-dev"
      ],
      "problemMatcher": {
        "owner": "custom",
        "pattern": {
          "regexp": "_______"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*",
          "endsPattern": "API server listening at: .*"
        }
      }
    }
  ]
}